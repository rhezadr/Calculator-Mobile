<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_yellow"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="25sp"
            android:text="Kalkulator"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/historyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/Transparent"
            android:src="@drawable/icon_history"
            app:tint="@color/orange" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textColor="#363003"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputText"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:textColor="#363003"
            android:textSize="50sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="C"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/minus_or_plus_Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="+/-"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/modulusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="%"
                android:textSize="30sp"
                android:onClick="operatorEvent"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:src="@drawable/icon_backspace_30"
                app:tint="@color/black"
                android:onClick="numberEvent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="7"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="8"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="9"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/divideButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:text="/"
                android:textColor="@color/light_orange"
                android:textSize="30sp"
                android:onClick="operatorEvent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="4"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="5"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="6"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:textColor="@color/light_orange"
                android:text="x"
                android:textSize="30sp"
                android:onClick="operatorEvent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="2"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="3"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/minusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:textColor="@color/light_orange"
                android:text="-"
                android:textSize="30sp"
                android:onClick="operatorEvent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/commaButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_yellow"
                android:textColor="@color/black"
                android:text=","
                android:textSize="30sp"
                android:onClick="numberEvent"/>

            <Button
                android:id="@+id/equalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/light_orange"
                android:textColor="@color/brown"
                android:text="="
                android:textSize="30sp"
                android:onClick="equalEvent"/>

            <Button
                android:id="@+id/plusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:text="+"
                android:textColor="@color/light_orange"
                android:textSize="30sp"
                android:onClick="operatorEvent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>